{
    "name": "visma/magento2-psalm",
    "description": "Psalm plugin for Magento 2",
    "type": "psalm-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcus Pettersen Irgens",
            "email": "marcus.irgens@visma.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "vimeo/psalm": "^4.0",
        "php": "^7.3",
        "ext-simplexml": "*"
    },
    "extra": {
        "psalm": {
            "pluginClass": "Visma\\Magento2Psalm\\Plugin"
        }
    },
    "autoload": {
        "psr-4": {
            "Visma\\Magento2Psalm\\": [
                "src/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Visma\\Magento2Psalm\\": [
                "tests/"
            ]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5",
        "magento/framework": "^100|^101|^102"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ]
}
